/* pages/activitis/activitis.wxss */

.news-item{
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.author{
  font-size: 36rpx;
  color: #2b2b2b;
  padding-left: 20rpx;
}
.author-image{
  width: 80rpx;
  height: 80rpx;
}
.public-date{
  font-size: 28rpx;
  color: #8b8b8b;
  padding-left: 20px;
}
.item-head{
  display: flex;
  align-items: center;
}
.title{
  font-size: 30rpx;
  color: #2b2b2b;
}
.description-image{
  margin-top: 20rpx;
  width: 100%;
  height: 300rpx; 
}
.description{
  font-size: 28rpx;
  color: #b2b2b2;
}
.movie-rating{
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}
.movie-rating>image{
  width: 30rpx;
  height: 30rpx;
}
.rating-score{
  font-size: 28rpx;
  display: inline-block;
  margin-left: 20rpx;
}
.movie-item-container .largeImg{
  width: 210rpx;
  height: 300rpx;
}
.movie-name{
  display: block;
  font-size: 32rpx;
  width: 210rpx;
  overflow: hidden;
  white-space: nowrap; 
  text-overflow: ellipsis;
}
.onload{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
  color: #8a8a8a;
}
.onload>image{
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  animation: loading 3s infinite linear;
}
@keyframes loading{
  from { transform: rotate(0deg) }
  to { transform: rotate(360deg) }
}